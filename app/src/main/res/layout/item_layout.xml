<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is an event"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/event_name"
        android:padding="6dp" />

    <TextView
        android:id="@+id/venue_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_name"
        android:layout_toEndOf="@+id/event_image"
        android:text="@string/venue_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/venue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/venue_label"
        android:layout_toEndOf="@+id/venue_label"
        android:paddingStart="4dp"
        android:text="O2 Arena" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venue_label"
        android:layout_toEndOf="@+id/event_image"
        android:text="@string/date_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date_label"
        android:layout_alignStart="@+id/venue_text"
        android:layout_toEndOf="@+id/date_label"
        android:paddingStart="4dp"
        android:text="O2 Arena" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_label"
        android:layout_toEndOf="@+id/event_image"
        android:text="@string/time_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time_label"
        android:layout_alignStart="@+id/venue_text"
        android:layout_toEndOf="@+id/time_label"
        android:paddingStart="4dp"
        android:text="O2 Arena" />


</RelativeLayout>